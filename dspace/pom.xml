<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.dspace</groupId>
  <artifactId>dspace</artifactId>
  <name>DSpace :: Assembly and Configuration</name>
  <packaging>pom</packaging>
  <description>
    The DSpace Project provides all the functionality required to build,
    install and upgrade and dspace instance.
  </description>
  <url>http://projects.dspace.org/dspace</url>
  <!-- 
    A Parent POM that Maven inherits DSpace Default 
    POM atrributes from. 
  -->
  <parent>
    <groupId>org.dspace</groupId>
    <artifactId>dspace-pom</artifactId>
    <version>1.5-SNAPSHOT</version>
    <relativePath>../dspace-pom</relativePath>
  </parent>
  <!-- 
  
    Profiles activate the inclusion of various modules into
    the DSpace Build process. These profiles are all 
    "Active by Default" to assure that all endorsed DSpace
    AddOns can be compiled against an addition/change in the
    codebase or in the dependencies.
    
    To restrict your build to a specific set of modules, use
    the '-P' option to build only the set of modules you 
    require. For example, to build only the JSPUI and OAI 
    modules:  'mvn -P jspui,oai package'
    
  -->
  <profiles>
    <!-- 
      Builds OAI Gateway WAR + Dependencies for DSpace
      Use '-P oai'
    -->
    <profile>
      <id>oai</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>oai</name>
        </property>
      </activation>
      <modules>
        <module>../language-packs</module>
        <module>../dspace-api</module>
        <module>../dspace-oai</module>
      </modules>
    </profile>
    <!-- 
      Builds JSPUI WAR + Dependencies for DSpace
      Use '-P jspui'
    -->
    <profile>
      <id>jspui</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>jspui</name>
        </property>
      </activation>
      <modules>
        <module>../language-packs</module>
        <module>../dspace-api</module>
        <module>../dspace-jspui</module>
      </modules>
    </profile>
    <!-- 
      Builds XMLUI WAR + Dependencies for DSpace
      Use '-P xmlui'
    -->
    <profile>
      <id>xmlui</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>xmlui</name>
        </property>
      </activation>
      <modules>
        <module>../language-packs</module>
        <module>../dspace-api</module>
        <module>../dspace-xmlui</module>
      </modules>
    </profile>
    <!-- 
      Builds LNI WAR + Dependencies for DSpace
      Use '-P lni'
    -->
    <profile>
      <id>lni</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>lni</name>
        </property>
      </activation>
      <modules>
        <module>../language-packs</module>
        <module>../dspace-api</module>
        <module>../dspace-lni</module>
      </modules>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-2-SNAPSHOT</version>
        <configuration>
          <descriptors>
            <descriptor>src/assemble/assembly.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>single</goal>
            </goals>
            <phase>package</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>