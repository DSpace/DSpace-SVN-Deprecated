  <modelVersion>4.0.0</modelVersion>
  <groupId>org.dspace</groupId>
  <artifactId>dspace</artifactId>
  <packaging>pom</packaging>
  <name>DSpace Installation Project</name>
  <version>1.5-SNAPSHOT</version>
  <description>The DSpace Installer Project provides all the functionality
		required to build, install and upgrade and dspace instance.</description>
  <url>http://www.dspace.org</url>

   <organization>
      <name>The DSpace Federation</name>
      <url>http://www.dspace.org</url>
   </organization>

   <licenses>
